<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".grammarFragments.PresentFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top|center"
        android:padding="10dp"
        android:orientation="vertical">

        <RadioGroup
            android:id="@+id/tenseRadioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/var_1"
                style="@style/customRadioButtonTenseStyle"
                android:checked="true"
                android:text="Past Simple" />

            <RadioButton
                android:id="@+id/var_2"
                style="@style/customRadioButtonTenseStyle"
                android:text="Past Continuous" />

            <RadioButton
                android:id="@+id/var_3"
                style="@style/customRadioButtonTenseStyle"
                android:text="Past Perfect" />

            <RadioButton
                android:id="@+id/var_4"
                style="@style/customRadioButtonTenseStyle"
                android:text="Past Perfect Continuous" />
        </RadioGroup>


        <TextView
            android:id="@+id/tvMutation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:padding="10dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:text="EN" />


        <TextView
            android:id="@+id/enName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/inter_bold"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            />

        <TextView
            android:id="@+id/czName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/inter_bold"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            />


        <TextView
            android:id="@+id/tvTitleDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Usage"
            android:textColor="@color/textBlack"
            android:gravity="left"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            />
        <TextView
            android:id="@+id/tvUsage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/usagePS"
            android:textColor="@color/textBlack"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:background="@color/bgUsage"
            android:padding="5dp"
            />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TableRow>
                <ImageView
                android:id="@+id/showMore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ico_dictionary"
                />
          
                <TextView
                    android:id="@+id/tvUsageCz"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/usagePS"
                    android:textColor="@color/textBlack"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:padding="5dp"
                    android:maxLines="0"
                    />

            </TableRow>


        </TableLayout>


        <TextView
            android:id="@+id/tvTitleForm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Form"
            android:textColor="@color/textBlack"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:gravity="left"
            />

        <TextView
            android:id="@+id/tvForm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/formPS"
            android:textColor="@color/textBlack"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            />

        <TextView
            android:id="@+id/tvTitleStructure"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Structure"
            android:textColor="@color/textBlack"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            />



        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <!-- Kladná věta -->
            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Affirmative"
                    android:textStyle="bold" />
            </TableRow>
            <TableRow>
                <TextView
                    android:id="@+id/tvAffirm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:text="- -" />
            </TableRow>
            <TableRow>
                <TextView
                    android:id="@+id/tvAExample"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:text="- -" />
            </TableRow>

            <!-- Záporná věta -->
            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Negative"
                    android:textStyle="bold" />
            </TableRow>
            <TableRow>
                <TextView
                    android:id="@+id/tvNegativ"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:text="- - -" />
            </TableRow>
            <TableRow>
                <TextView
                    android:id="@+id/tvNExample"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:text="- - -" />
            </TableRow>


            <!-- Otázka -->
            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Question"
                    android:textStyle="bold" />
            </TableRow>
            <TableRow>
                <TextView
                    android:id="@+id/tvQuestion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:text="- - ?" />

            </TableRow>
            <TableRow>
                <TextView
                    android:id="@+id/tvQExample"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:text="- - ?" />
            </TableRow>


        </TableLayout>

    </LinearLayout>

</ScrollView>
