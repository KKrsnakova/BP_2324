<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".fragments.GrammarFragment">



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="30dp"
            >

            <ImageView
                android:id="@+id/mainPic"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:scaleX="-1"
                android:src="@drawable/pap1_bgrem"
                android:contentDescription="Parrot image" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/titleEn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tenses\n in \nEnglish"
                    android:fontFamily="@font/finger_paint_regular"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large" />

                <TextView
                    android:id="@+id/titleCz"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Časy v Angličtině"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small" />

            </LinearLayout>


        </LinearLayout>

    <TextView
        android:id="@+id/desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:textAlignment="center"
        android:text="English has three basic tenses, each with its own specification. \n Select the English tense you want to learn about in the textbook"
        android:textAppearance="@style/TextAppearance.AppCompat.Small" />


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="10dp">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Present tense"
                android:layout_alignParentStart="true"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginStart="20dp"
                android:textColor="@color/textBlack"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"/>


            <Button
                android:id="@+id/btnPresent"
                style="@style/customBtnStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="7dp"
                android:padding="16dp"
                android:text="show"
                tools:ignore="DuplicateSpeakableTextCheck" />

            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginTop="5dp"
                android:layout_marginStart="20dp"
                android:text="Přítomný čas"
                android:textColor="@color/textBlack"
                android:layout_below="@+id/tvTitle"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="10dp">

            <TextView
                android:id="@+id/tvTitle2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="20dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Past tense"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@color/textBlack" />


            <Button
                android:id="@+id/btnPast"
                style="@style/customBtnStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="7dp"
                android:padding="16dp"
                android:text="show" />

            <TextView
                android:id="@+id/tvName2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvTitle2"
                android:layout_alignParentStart="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:text="Minulý čas"
                android:textColor="@color/textBlack" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="10dp">

            <TextView
                android:id="@+id/tvTitle3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Future tense"
                android:layout_alignParentStart="true"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginStart="20dp"
                android:textColor="@color/textBlack"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"/>


            <Button
                android:id="@+id/btnFuture"
                style="@style/customBtnStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="show"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="7dp"
                android:padding="16dp"/>


            <TextView
                android:id="@+id/tvName3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginTop="5dp"
                android:layout_marginStart="20dp"
                android:text="Budoucí čas"
                android:textColor="@color/textBlack"
                android:layout_below="@+id/tvTitle3"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>







</LinearLayout>