<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Základní téma aplikace -->
    <style name="mainStyle" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Přizpůsobte barvy vašeho tématu zde -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- Přizpůsobení TextInputLayout -->
        <item name="textInputStyle">@style/customTextInputStyle</item>
    </style>

    <!-- Style for TextInputLayout -->
    <style name="customTextInputStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/boxStrokeColor</item>
        <item name="hintTextColor">@color/hintTextColor</item>

    </style>

    <!-- Style for Button SaveWord -->
    <style name="customBtnStyle" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/colorPrimary </item>
        <item name="android:textColor">@color/white</item> <!-- White text color -->
        <item name="cornerRadius">10dp</item> <!-- Define the corner radius if needed -->

    </style>

    <!-- Style for Button CloseWord -->
    <style name="customBtnCloseOrBasicStyle" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/hint</item>
        <item name="android:textColor">@color/black</item>
        <item name="cornerRadius">10dp</item> <!-- Define the corner radius if needed -->
    </style>


    <!-- Style for FloatingActionButton Add Word -->
    <style name="customFloatingBtnAdd" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/greenD</item>
        <item name="rippleColor">@color/colorPrimary</item>
    </style>


    <!-- Style for LoginActivity + RegistrationActivity -->

    <!-- Style for Login/Register labels -->
    <style name="customLoginTextInputStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/boxStrokeColor</item>
        <item name="hintTextColor">@color/hintTextColor</item>
        <item name="android:layout_marginStart">30dp</item>
        <item name="android:layout_marginEnd">30dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:textColor">@color/labelTextColor</item>
        <item name="android:textSize">16sp</item>
        <item name="android:ems">10</item>
    </style>


    <!-- Style for Login/Register Button  -->
    <style name="customBtnLoginStyle" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">20dp</item>
        <item name="android:layout_marginStart">50dp</item>
        <item name="android:layout_marginEnd">50dp</item>
        <item name="android:padding">10dp</item>
    </style>

    <!-- Style for Dictionary Button  -->
    <style name="customBtnLoginStyleDictionary" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">20dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>

    <!-- Style for Login/Register TextFields  -->
    <style name="customTextViewLoginStyle" parent="Widget.AppCompat.TextView">
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:backgroundTint">@color/greyText</item>
        <item name="android:fontFamily">@font/inter_bold</item>
        <item name="android:text">Register now</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">18sp</item>
    </style>



    <!--Grammar -->
    <!-- Style for RadioButton -->
    <style name="customRadioButtonTenseStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:maxLines">3</item>
        <item name="android:ellipsize">end</item>
        <item name="android:background">@drawable/radio_button</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:padding">5dp</item>
    </style>

</resources>